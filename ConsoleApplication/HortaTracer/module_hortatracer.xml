<?xml version="1.0" encoding="UTF-8"?>
<project name="module_hortatracer" default="compile.module.hortatracer">
  <dirname property="module.hortatracer.basedir" file="${ant.file.module_hortatracer}"/>
  
  <property name="module.jdk.home.hortatracer" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.hortatracer" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.hortatracer" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.hortatracer" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="hortatracer.output.dir" value="${module.hortatracer.basedir}/../../buildprocess/intellij-make/production/HortaTracer"/>
  <property name="hortatracer.testoutput.dir" value="${module.hortatracer.basedir}/../../buildprocess/intellij-make/test/HortaTracer"/>
  
  <path id="hortatracer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hortatracer.module.production.classpath">
    <path refid="${module.jdk.classpath.hortatracer}"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.logging.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <pathelement location="${geometry3d.output.dir}"/>
    <pathelement location="${integrationapis.output.dir}"/>
    <pathelement location="${scenewindow.output.dir}"/>
    <pathelement location="${viewerapi.output.dir}"/>
    <path refid="library.common_external_libraries.classpath"/>
    <pathelement location="${glviewertools.output.dir}"/>
    <pathelement location="${model.output.dir}"/>
    <pathelement location="${shared.output.dir}"/>
  </path>
  
  <path id="hortatracer.runtime.production.module.classpath">
    <pathelement location="${hortatracer.output.dir}"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.logging.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="geometry3d.runtime.production.module.classpath"/>
    <path refid="integrationapis.runtime.production.module.classpath"/>
    <path refid="scenewindow.runtime.production.module.classpath"/>
    <path refid="viewerapi.runtime.production.module.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="glviewertools.runtime.production.module.classpath"/>
    <path refid="model.runtime.production.module.classpath"/>
    <path refid="shared.runtime.production.module.classpath"/>
  </path>
  
  <path id="hortatracer.module.classpath">
    <path refid="${module.jdk.classpath.hortatracer}"/>
    <pathelement location="${hortatracer.output.dir}"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.logging.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <pathelement location="${geometry3d.testoutput.dir}"/>
    <pathelement location="${geometry3d.output.dir}"/>
    <pathelement location="${integrationapis.testoutput.dir}"/>
    <pathelement location="${integrationapis.output.dir}"/>
    <pathelement location="${scenewindow.testoutput.dir}"/>
    <pathelement location="${scenewindow.output.dir}"/>
    <pathelement location="${viewerapi.testoutput.dir}"/>
    <pathelement location="${viewerapi.output.dir}"/>
    <path refid="library.common_external_libraries.classpath"/>
    <pathelement location="${glviewertools.testoutput.dir}"/>
    <pathelement location="${glviewertools.output.dir}"/>
    <pathelement location="${model.testoutput.dir}"/>
    <pathelement location="${model.output.dir}"/>
    <pathelement location="${shared.testoutput.dir}"/>
    <pathelement location="${shared.output.dir}"/>
  </path>
  
  <path id="hortatracer.runtime.module.classpath">
    <pathelement location="${hortatracer.testoutput.dir}"/>
    <pathelement location="${hortatracer.output.dir}"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.logging.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="geometry3d.runtime.module.classpath"/>
    <path refid="integrationapis.runtime.module.classpath"/>
    <path refid="scenewindow.runtime.module.classpath"/>
    <path refid="viewerapi.runtime.module.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="glviewertools.runtime.module.classpath"/>
    <path refid="model.runtime.module.classpath"/>
    <path refid="shared.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.hortatracer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hortatracer">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.hortatracer"/>
  </patternset>
  
  <path id="hortatracer.module.sourcepath">
    <dirset dir="${module.hortatracer.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hortatracer" depends="compile.module.hortatracer.production,compile.module.hortatracer.tests" description="Compile module HortaTracer"/>
  
  <target name="compile.module.hortatracer.production" depends="register.custom.compilers,compile.module.geometry3d,compile.module.integrationapis,compile.module.scenewindow,compile.module.viewerapi,compile.module.glviewertools,compile.module.model,compile.module.shared" description="Compile module HortaTracer; production classes">
    <mkdir dir="${hortatracer.output.dir}"/>
    <javac2 destdir="${hortatracer.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hortatracer}/javac">
      <compilerarg line="${compiler.args.hortatracer}"/>
      <bootclasspath refid="hortatracer.module.bootclasspath"/>
      <classpath refid="hortatracer.module.production.classpath"/>
      <src refid="hortatracer.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hortatracer"/>
    </javac2>
    
    <copy todir="${hortatracer.output.dir}">
      <fileset dir="${module.hortatracer.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.hortatracer"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hortatracer.tests" depends="register.custom.compilers,compile.module.hortatracer.production" description="compile module HortaTracer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hortatracer" description="cleanup module">
    <delete dir="${hortatracer.output.dir}"/>
    <delete dir="${hortatracer.testoutput.dir}"/>
  </target>
</project>