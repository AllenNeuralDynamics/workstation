<?xml version="1.0" encoding="UTF-8"?>
<project name="module_integrationapis" default="compile.module.integrationapis">
  <dirname property="module.integrationapis.basedir" file="${ant.file.module_integrationapis}"/>
  
  <property name="module.jdk.home.integrationapis" value=""/>
  <property name="module.jdk.bin.integrationapis" value=""/>
  <property name="module.jdk.classpath.integrationapis" value=""/>
  
  <property name="compiler.args.integrationapis" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="integrationapis.output.dir" value="${module.integrationapis.basedir}/../../buildprocess/intellij-make/production/IntegrationAPIs"/>
  <property name="integrationapis.testoutput.dir" value="${module.integrationapis.basedir}/../../buildprocess/intellij-make/test/IntegrationAPIs"/>
  
  <path id="integrationapis.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="integrationapis.module.production.classpath">
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="library.core.classpath"/>
    <pathelement location="${shared.output.dir}"/>
    <pathelement location="${model.output.dir}"/>
  </path>
  
  <path id="integrationapis.runtime.production.module.classpath">
    <pathelement location="${integrationapis.output.dir}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="shared.runtime.production.module.classpath"/>
    <path refid="model.runtime.production.module.classpath"/>
  </path>
  
  <path id="integrationapis.module.classpath">
    <pathelement location="${integrationapis.output.dir}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="library.core.classpath"/>
    <pathelement location="${shared.testoutput.dir}"/>
    <pathelement location="${shared.output.dir}"/>
    <pathelement location="${model.testoutput.dir}"/>
    <pathelement location="${model.output.dir}"/>
  </path>
  
  <path id="integrationapis.runtime.module.classpath">
    <pathelement location="${integrationapis.testoutput.dir}"/>
    <pathelement location="${integrationapis.output.dir}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="shared.runtime.module.classpath"/>
    <path refid="model.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.integrationapis">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.integrationapis">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.integrationapis"/>
  </patternset>
  
  <path id="integrationapis.module.sourcepath">
    <dirset dir="${module.integrationapis.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.integrationapis" depends="compile.module.integrationapis.production,compile.module.integrationapis.tests" description="Compile module IntegrationAPIs"/>
  
  <target name="compile.module.integrationapis.production" depends="register.custom.compilers,compile.module.shared,compile.module.model" description="Compile module IntegrationAPIs; production classes">
    <mkdir dir="${integrationapis.output.dir}"/>
    <javac2 destdir="${integrationapis.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.integrationapis}/javac">
      <compilerarg line="${compiler.args.integrationapis}"/>
      <bootclasspath refid="integrationapis.module.bootclasspath"/>
      <classpath refid="integrationapis.module.production.classpath"/>
      <src refid="integrationapis.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.integrationapis"/>
    </javac2>
    
    <copy todir="${integrationapis.output.dir}">
      <fileset dir="${module.integrationapis.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.integrationapis"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.integrationapis.tests" depends="register.custom.compilers,compile.module.integrationapis.production" description="compile module IntegrationAPIs; test classes" unless="skip.tests"/>
  
  <target name="clean.module.integrationapis" description="cleanup module">
    <delete dir="${integrationapis.output.dir}"/>
    <delete dir="${integrationapis.testoutput.dir}"/>
  </target>
</project>