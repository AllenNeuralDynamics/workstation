<?xml version="1.0" encoding="UTF-8"?>
<project name="module_geometry3d" default="compile.module.geometry3d">
  <dirname property="module.geometry3d.basedir" file="${ant.file.module_geometry3d}"/>
  
  <property name="module.jdk.home.geometry3d" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.geometry3d" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.geometry3d" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.geometry3d" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="geometry3d.output.dir" value="${module.geometry3d.basedir}/../../buildprocess/intellij-make/production/Geometry3d"/>
  <property name="geometry3d.testoutput.dir" value="${module.geometry3d.basedir}/../../buildprocess/intellij-make/test/Geometry3d"/>
  
  <path id="geometry3d.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="geometry3d.module.production.classpath">
    <path refid="${module.jdk.classpath.geometry3d}"/>
    <pathelement location="${viewerapi.output.dir}"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
  </path>
  
  <path id="geometry3d.runtime.production.module.classpath">
    <pathelement location="${geometry3d.output.dir}"/>
    <path refid="viewerapi.runtime.production.module.classpath"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
  </path>
  
  <path id="geometry3d.module.classpath">
    <path refid="${module.jdk.classpath.geometry3d}"/>
    <pathelement location="${geometry3d.output.dir}"/>
    <pathelement location="${viewerapi.testoutput.dir}"/>
    <pathelement location="${viewerapi.output.dir}"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
  </path>
  
  <path id="geometry3d.runtime.module.classpath">
    <pathelement location="${geometry3d.testoutput.dir}"/>
    <pathelement location="${geometry3d.output.dir}"/>
    <path refid="viewerapi.runtime.module.classpath"/>
    <path refid="library.jogl224lib.classpath"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.geometry3d">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.geometry3d">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.geometry3d"/>
  </patternset>
  
  <path id="geometry3d.module.sourcepath">
    <dirset dir="${module.geometry3d.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.geometry3d" depends="compile.module.geometry3d.production,compile.module.geometry3d.tests" description="Compile module Geometry3d"/>
  
  <target name="compile.module.geometry3d.production" depends="register.custom.compilers,compile.module.viewerapi" description="Compile module Geometry3d; production classes">
    <mkdir dir="${geometry3d.output.dir}"/>
    <javac2 destdir="${geometry3d.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.geometry3d}/javac">
      <compilerarg line="${compiler.args.geometry3d}"/>
      <bootclasspath refid="geometry3d.module.bootclasspath"/>
      <classpath refid="geometry3d.module.production.classpath"/>
      <src refid="geometry3d.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.geometry3d"/>
    </javac2>
    
    <copy todir="${geometry3d.output.dir}">
      <fileset dir="${module.geometry3d.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.geometry3d"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.geometry3d.tests" depends="register.custom.compilers,compile.module.geometry3d.production" description="compile module Geometry3d; test classes" unless="skip.tests"/>
  
  <target name="clean.module.geometry3d" description="cleanup module">
    <delete dir="${geometry3d.output.dir}"/>
    <delete dir="${geometry3d.testoutput.dir}"/>
  </target>
</project>