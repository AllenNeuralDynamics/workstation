<?xml version="1.0" encoding="UTF-8"?>
<project name="module_viewer3d" default="compile.module.viewer3d">
  <dirname property="module.viewer3d.basedir" file="${ant.file.module_viewer3d}"/>
  
  <property name="module.jdk.home.viewer3d" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.viewer3d" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.viewer3d" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.viewer3d" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="viewer3d.output.dir" value="${module.viewer3d.basedir}/../../buildprocess/intellij-make/production/Viewer3D"/>
  <property name="viewer3d.testoutput.dir" value="${module.viewer3d.basedir}/../../buildprocess/intellij-make/test/Viewer3D"/>
  
  <path id="viewer3d.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="viewer3d.module.production.classpath">
    <path refid="${module.jdk.classpath.viewer3d}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="library.jogl213.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <pathelement location="${shared.output.dir}"/>
    <pathelement location="${integrationapis.output.dir}"/>
  </path>
  
  <path id="viewer3d.runtime.production.module.classpath">
    <pathelement location="${viewer3d.output.dir}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="library.jogl213.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="shared.runtime.production.module.classpath"/>
    <path refid="integrationapis.runtime.production.module.classpath"/>
  </path>
  
  <path id="viewer3d.module.classpath">
    <path refid="${module.jdk.classpath.viewer3d}"/>
    <pathelement location="${viewer3d.output.dir}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="library.jogl213.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <pathelement location="${shared.testoutput.dir}"/>
    <pathelement location="${shared.output.dir}"/>
    <pathelement location="${integrationapis.testoutput.dir}"/>
    <pathelement location="${integrationapis.output.dir}"/>
  </path>
  
  <path id="viewer3d.runtime.module.classpath">
    <pathelement location="${viewer3d.testoutput.dir}"/>
    <pathelement location="${viewer3d.output.dir}"/>
    <path refid="library.apache_commons.classpath"/>
    <path refid="library.core.classpath"/>
    <path refid="library.jogl213.classpath"/>
    <path refid="library.common_external_libraries.classpath"/>
    <path refid="shared.runtime.module.classpath"/>
    <path refid="integrationapis.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.viewer3d">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.viewer3d">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.viewer3d"/>
  </patternset>
  
  <path id="viewer3d.module.sourcepath">
    <dirset dir="${module.viewer3d.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.viewer3d" depends="compile.module.viewer3d.production,compile.module.viewer3d.tests" description="Compile module Viewer3D"/>
  
  <target name="compile.module.viewer3d.production" depends="register.custom.compilers,compile.module.shared,compile.module.integrationapis" description="Compile module Viewer3D; production classes">
    <mkdir dir="${viewer3d.output.dir}"/>
    <javac2 destdir="${viewer3d.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.viewer3d}/javac">
      <compilerarg line="${compiler.args.viewer3d}"/>
      <bootclasspath refid="viewer3d.module.bootclasspath"/>
      <classpath refid="viewer3d.module.production.classpath"/>
      <src refid="viewer3d.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.viewer3d"/>
    </javac2>
    
    <copy todir="${viewer3d.output.dir}">
      <fileset dir="${module.viewer3d.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.viewer3d"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.viewer3d.tests" depends="register.custom.compilers,compile.module.viewer3d.production" description="compile module Viewer3D; test classes" unless="skip.tests"/>
  
  <target name="clean.module.viewer3d" description="cleanup module">
    <delete dir="${viewer3d.output.dir}"/>
    <delete dir="${viewer3d.testoutput.dir}"/>
  </target>
</project>